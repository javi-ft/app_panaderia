platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(
    File.join('..', 'Flutter', 'Generated.xcconfig'),
    __dir__
  )

  # Evita que Codemagic falle si el archivo aún no existe
  unless File.exist?(generated_xcode_build_settings_path)
    puts "⚠️ Warning: #{generated_xcode_build_settings_path} not found. Skipping lookup (Codemagic safe)."
    # Retorna el directorio donde Flutter suele estar instalado en CI
    return ENV['FLUTTER_ROOT'] if ENV['FLUTTER_ROOT']

    # Ruta fallback segura para Codemagic
    return File.expand_path(File.join('..', '..', '..', 'flutter'))
  end

  # Solo si el archivo existe, lo leemos
  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end

  # No fallar, solo advertir
  puts "⚠️ FLUTTER_ROOT not found in Generated.xcconfig, using fallback."
  return File.expand_path(File.join('..', '..', '..', 'flutter'))
end

require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
